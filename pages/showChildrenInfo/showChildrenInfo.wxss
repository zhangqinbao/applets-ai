/* pages/showChildrenInfo/showChildrenInfo.wxss */
page{
  height: 100%;
}
.ai-info-boxs{
  width: 100%;
  min-height: 100%;
  background-image: url("https://ingcare-ai.oss-cn-beijing.aliyuncs.com/20201119/bg_hzxx.png");
  background-size: 100%;
  background-repeat: no-repeat;
  overflow: hidden;
  overflow-y: auto!important;
  padding: 0 12rpx;
  box-sizing: border-box;
}
.ai-this-nav{
  position: fixed;
  z-index: 2;
  color: 0;
  width: 100%;
  text-align: center;
  color: #fff;
}
.ai-this-nav view:first-child{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 34rpx;
  top: 8rpx;
  text-align: left;
}
.ai-this-nav view:first-child::before{
  content: "";
  display: inline-block;
  width: 18rpx;
  height: 36rpx;
  background-image: url("https://ingcare-ai.oss-cn-beijing.aliyuncs.com/20201119/icon_nav_back.png");
  background-size: 100%;
}
.ai-info-box{
  width: 100%;
  margin-top: 150rpx;
  box-sizing: border-box;
  position: relative;
  background: url("https://ingcare-ai.oss-cn-beijing.aliyuncs.com/20201119/bg_hzxx_s.png") no-repeat;
  background-size: 100%;
  position: relative;
  padding: 0 18rpx;
  border: 1px solid transparent;
  display: block;
}
.ai-info-list{
  position: relative;
  background: #fff;
}
.ai-info-list::after{
  content: "";
  display: inline-block;
  width: 100%;
  height: 62rpx;
  background: url("https://ingcare-ai.oss-cn-beijing.aliyuncs.com/20201119/bg_hzxx_x%402x.png") no-repeat;
  background-size: 100%;
  position: absolute;
  left: 0;
  bottom: -12rpx;
}
.ai-info-box image{
  width: 100%;
  height: auto;
}
.ai-info-list{
  margin-top: 266rpx;
  width: 100%;
  padding: 0 52rpx;
  box-sizing: border-box;
  padding-bottom: 30rpx;
}
.ai-info-list view{
    font-size: 32rpx;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    align-items: center;
    margin-top: 60rpx;
}
.ai-info-list view text:first-child{
  color: #999999;
  float: left;
  display: inline-block;
  width: 30%;
}
.ai-info-list view text:last-child{
  color: #181818;
  width: 70%;
  float: left;
  display: inline-block;
  line-height: 38rpx;
  font-weight: 500;
}
.ai-info-list view:last-child text:last-child{
  margin-top: 6rpx;
}

.ai-edit-children-info{
  width: 390rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;

  background: #1DBFB3;
  border-radius: 48rpx;
  margin: 62rpx auto;
  font-size: 32rpx;
  color: #fff;
  margin-top: 170rpx;
  font-weight: 500;
}
.ai-no-net{
  margin-top: 200rpx;
}
.ai-info-list view:last-child{
  padding-bottom: 22rpx;
}
@media screen and (max-width: 415px) and (max-height:740px){
  .ai-info-box{
    margin-top: 100rpx;
  }
  .ai-edit-children-info{
    margin-top: 60rpx;
  }
  .ai-info-box{
    padding: 0 16rpx;
  }
}